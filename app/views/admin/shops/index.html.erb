				<tr>
					<th>店舗名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @shops.each do |shop| %>
					<tr>
						<td><%= shop.name %></td>
						<td class="text-center"><%= link_to "編集", edit_admin_shop_path(shop), class: "btn btn-success" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</section>


