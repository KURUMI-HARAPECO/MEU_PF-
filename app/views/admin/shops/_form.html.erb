<%= form_for(shop, url: url) do |f| %>
    <%= render 'layouts/error_messages', resource: shop %>
    <%= f.label :name, "店舗名" %>
    <%= f.text_field :name %>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
    <%= f.label :shop_genre_id, "ジャンル" %>
    <%= f.collection_select :shop_genre_id, ShopGenre.all, :id, :name %>

	<%= f.submit submit, class: "btn btn-primary ml2" %>
<% end %>