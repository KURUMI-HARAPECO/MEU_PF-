<%= form_for(genre, url: url) do |f| %>
	<%= render 'layouts/error_messages', resource: genre %>
	<%= f.label :name, "ジャンル名:" %>
	<%= f.text_field :name %>
	<%#= f.label :image_id, "画像" %>
	<%#= attachment_image_tag genre, :image_id, format: "jpeg", id: "img_prev", fallback: "no_image.jpg", class: "admin_item_image" %>

		<div>
			<%= f.label :image_id, "画像" %>
			<div class="image_field">
				<%= attachment_image_tag genre, :image_id, format: "jpeg", id: "img_prev", fallback: "no_image.jpg", class: "admin_item_image" %>
				<span class="btn btn-file btn-info"><%= f.attachment_field :image %>画像選択</span>
			</div>
		</div>

	<%= f.radio_button :is_active, true %>
	<%= f.label :is_active, "有効", class: "text-active" %>
	<%= f.radio_button :is_active, false %>
	<%= f.label :is_active, "無効", class: "text-invalid" %>
	<%= f.submit submit, class: "btn btn-primary ml2" %>
<% end %>