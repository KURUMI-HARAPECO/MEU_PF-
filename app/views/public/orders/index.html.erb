<section class="inner">
	<div class="shop_footer">
		<div class="container">
			<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
				<h2 class="section-ttl">注文履歴一覧</h2>
				<table class="orders has_border"  align="center">
					<thead>
						<tr>
							<th>注文日</th>
							<th>受け渡し店舗</th>
							<th>支払金額</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
							<tr>
								<td><%= order.created_at_jst.strftime('%Y/%m/%d') %></td>
								<td>
									<%= order.shop.name %>
								</td>
								<td class="text-center"><%= order.status_i18n %></td>
								<td class="text-center">
									<%= link_to "表示する", order_path(order), class: "btn btn-primary" %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= paginate @orders %>
			</div>
		</div>
	</div>
</section>
