<section class="wrapper flex">
	<div class="content">
  	<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">ようこそ、MEUへ!</h1>
        <p class="lead font-weight-normal">
          このサイトは、ハンバーガー販売のECサイトになります。<br>
  				会員でない方も商品の閲覧はできますが、<br>
  				購入には会員登録が必要になります。</p>
        <a class="btn btn-outline-secondary" href="#">Coming soon</a>
      </div>
      <div class="product-device shadow-sm d-none d-md-block"></div>
      <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
    </div>
  </div>

	<h2 class="section-ttl">オススメ商品</h2>
	<div class="items">
		<% @items.each do |item| %>
		<div class="item">
			<%= link_to item_path(item) do %>
			<div class="item">
				<%= attachment_image_tag item, :image, format: "jpeg", size: "100x100", fallback: "no_image.jpg" %>
				<h5><%= item.genre.name %></h5>
				<p><%= item.name %></p>
				<p><%= item.with_tax_price %>円</p>
			<% end %>
		</div>
		<% end %>
	</div>

  <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
    <% @genres.each do |genre| %>
    <div class=" mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
      <div class="my-3 py-3">
          <h2 class="display-5">
        			<%= link_to genre.name, items_path(genre_id: genre.id) %>
          </h2>
          <p class="lead">And an even wittier subheading.</p>
        <div class="bg-light shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"></div>
      </div>
    </div>
  	<% end %>
  </div>

</section>
